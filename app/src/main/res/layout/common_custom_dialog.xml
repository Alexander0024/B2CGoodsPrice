<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    style="@style/customDialogStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dialog_wrapper"
    android:layout_marginRight="@dimen/dialog_wrapper"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:gravity="center"
        android:textColor="@color/edt_black"
        android:textSize="@dimen/text_size_normal"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="100.0dp"
            android:paddingBottom="@dimen/border_margin"
            android:paddingLeft="@dimen/border_margin"
            android:paddingRight="@dimen/border_margin"
            android:paddingTop="@dimen/border_margin"
            android:textColor="@color/edt_black"
            android:textSize="@dimen/text_size_content"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/split_line"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_button_height"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_negative_button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/main"
            android:textSize="@dimen/h_30"/>

        <View
            android:id="@+id/v_split_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/split_line"/>

        <TextView
            android:id="@+id/tv_positive_button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/main"
            android:textSize="@dimen/h_30"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>